{
  "name": "digia-react",
  "version": "0.1.0",
  "author": {
    "name": "Sini Pauliina Kolehmainen",
    "email": "kolehmainen.sini@outlook.com",
    "url": "https://www.sinipauliina.com"
  },
  "description": "A simple React app containing a small signup form and a list of participants.",
  "private": true,
  "dependencies": {
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.5",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "eol-last": [
        2,
        "always"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        2,
        80,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": true
        }
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "object-curly-spacing": [
        2,
        "never"
      ],
      "semi": [
        2,
        "never"
      ],
      "space-infix-ops": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
